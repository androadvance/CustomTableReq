<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    android:scrollbars="none">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LeaveReport.AdminViewLeaveReport">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:id="@+id/appid"
                android:text="">

            </TextView>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/empid"
                android:text="">

            </EditText>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Unit"
                android:textColor="#000000"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginRight="25dp"
                android:orientation="vertical"
                android:background="@drawable/borders">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/unitid">
                </Spinner>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Team"
                android:textColor="#000000"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginRight="25dp"
                android:orientation="vertical"
                android:background="@drawable/borders">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/teamid"
                    android:padding="3dp">
                </Spinner>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Emp No"
                android:textColor="#000000"
                android:textSize="18sp" />

            <AutoCompleteTextView
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:textSize="16sp"
                android:hint="Enter Employee Number"
                android:textColor="#000000"
                android:id="@+id/empnoid"
                android:paddingLeft="10dp"
                android:paddingRight="17dp"
                android:singleLine="true"
                android:cursorVisible="true"
                android:inputType="textCapCharacters"
                android:background="@drawable/borders"
                android:completionThreshold="1"
                android:lines="1"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/fromid"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Select Start Date"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/startdateid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ff8dc01d"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/toid"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Select End Date"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/enddateid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ff8dc01d"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:text="Get Report"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:id="@+id/searchid"
            android:textColor="#FFFFFF"
            android:background="@drawable/reportbutton"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearid1"
            android:orientation="vertical"
            android:visibility="invisible"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="5dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/nameid"
                    android:paddingTop="5dp"
                    android:layout_marginTop="5dp"
                    android:textSize="20dp"
                    android:textColor="#E41818"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageid"
                    android:src="@drawable/avatars">

                </androidx.appcompat.widget.AppCompatImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:background="@drawable/border">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:background="@drawable/setcircle"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:id="@+id/presentcircleid">

                        <TextView
                            android:id="@+id/presentcountid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text=""
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:background="@drawable/setcircle"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:id="@+id/leavecircleid"
                        android:layout_marginLeft="20dp">

                        <TextView
                            android:id="@+id/leavecountid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text=""
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:background="@drawable/setcircle"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:id="@+id/permissioncircleid"
                        android:layout_marginLeft="20dp">

                        <TextView
                            android:id="@+id/permissioncountid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text=""
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:background="@drawable/setcircle"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:id="@+id/latecircleid"
                        android:layout_marginLeft="20dp">

                        <TextView
                            android:id="@+id/latecountid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text=""
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="Present"
                        android:textColor="#000000"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:text="Leave"
                        android:textColor="#000000"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:text="Permission"
                        android:textColor="#000000"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:text="Late"
                        android:textColor="#000000"
                        android:textSize="14sp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Last Leave           :"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:id="@+id/leavedatel"
                        android:textStyle="bold"
                        android:textColor="#FFE40B0B"/>

                    <Button
                        android:layout_width="60dp"
                        android:layout_height="35dp"
                        android:text="More"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/reportbutton"
                        android:textColor="#FFFFFF"
                        android:id="@+id/leavemoreid"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Last Permission  :"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:id="@+id/lastpermissionp"
                        android:textColor="#FFE40B0B"/>

                    <Button
                        android:layout_width="60dp"
                        android:layout_height="35dp"
                        android:text="More"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/reportbutton"
                        android:textColor="#FFFFFF"
                        android:id="@+id/permissionmoreid"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

</ScrollView>