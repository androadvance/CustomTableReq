<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:background="@drawable/listborders">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textSize="16sp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text=":  700"
                android:textSize="16sp"
                android:id="@+id/text1"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="EmpNo"
                android:textSize="16sp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:id="@+id/text2"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Request"
                android:textSize="16sp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text=":  Emergency lighting System"
                android:textSize="16sp"
                android:id="@+id/text3"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Unit"
                android:textSize="16sp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:id="@+id/text4"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="16sp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text=":  23.06.2019"
                android:textSize="16sp"
                android:id="@+id/text5"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="16sp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text=":  Pending"
                android:textSize="16sp"
                android:id="@+id/text6"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>